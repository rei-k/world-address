# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=production
LOG_LEVEL=info
PORT=3000

# Database - PostgreSQL
POSTGRES_HOST=postgres-service
POSTGRES_PORT=5432
POSTGRES_DB=world_address
POSTGRES_USER=vey_user
POSTGRES_PASSWORD=changeme_secure_password

# Cache - Redis
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password

# MongoDB (for VeyVault)
MONGODB_HOST=mongodb-service
MONGODB_PORT=27017
MONGODB_DB=world_address
MONGO_USER=vey_admin
MONGO_PASSWORD=changeme_mongo_password

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Security
JWT_SECRET=changeme_jwt_secret_key_minimum_32_chars
ENCRYPTION_KEY=changeme_encryption_key_32_chars_min

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme_grafana_password

# External Services
# GEOCODING_API_KEY=your_geocoding_api_key
# MAPS_API_KEY=your_maps_api_key

# Cloud Provider (optional)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# S3_BUCKET=world-address-data

# SSL/TLS
# SSL_CERT_PATH=/etc/ssl/certs/cert.pem
# SSL_KEY_PATH=/etc/ssl/private/key.pem

# Feature Flags
ENABLE_GEOCODING=true
ENABLE_ZKP=false
ENABLE_ANALYTICS=true
